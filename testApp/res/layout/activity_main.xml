<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:option="http://schemas.android.com/apk/res/com.example.testapp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".MainActivity" 
    android:orientation="vertical" >
	
     <com.example.testapp.ColorChange
        android:id="@+id/view2"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingBottom="10dp"
	    android:paddingTop="10dp"
        android:onClick="onClicked"
        option:titleText="Foreground Color"
        option:valueColor="#591e6e" />
     
    <com.example.testapp.ColorChange
        android:id="@+id/view1"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingBottom="10dp"
	    android:paddingTop="10dp"
	    android:onClick="onClicked"
        option:titleText="Background Color"
        option:valueColor="#FFA4C639" />
        
</LinearLayout>